{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "ignorePaths": [
        "integration/testdata/**",
        "test/resources/**"
    ],
    "labels": [
        "dependencies"
      ],
    "packageRules": [
        {
            "description": "Automerge patch version updates (except versions 0.x as they could have breaking changes)",
            "matchUpdateTypes": ["patch"],
            "matchCurrentVersion": "!/^(v?0)/",
            "automerge": true,
            
        },
        {
            "description": "Create PRs to roll back versions if the current version is not found in the registry.",
            "rollbackPrs": true,
            "automerge": true
        }
    ],
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
}
